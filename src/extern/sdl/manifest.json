{
    "$schema": "https://schemas.cute.engineering/stable/cutekit.manifest.component.v1",
    "id": "extd-sdl2",
    "type": "lib",
    "description": "A windowing and input library for C",
    "enableIf": {
        "host": [
            true
        ]
    },
    "tools": {
        "cc": {
            "args": [
                "@exec",
                "pkg-config",
                "--cflags",
                "sdl2"
            ]
        },
        "cxx": {
            "args": [
                "@exec",
                "pkg-config",
                "--cflags",
                "sdl2"
            ]
        },
        "ld": {
            "args": [
                "@exec",
                "pkg-config",
                "--libs",
                "sdl2"
            ]
        }
    }
}